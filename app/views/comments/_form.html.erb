<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
   <% if logged_in? %>
   <%= f.label :author_name, current_user.username%>
    <% else %>
     <%= f.label :author_name %><br/>
    <%= f.text_field :author_name %> 
   <% end %>
    
  </p>
  <p>
    <%= f.label :body, "Your Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>